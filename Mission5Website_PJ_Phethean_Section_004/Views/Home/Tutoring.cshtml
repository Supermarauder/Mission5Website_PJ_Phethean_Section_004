@{
    ViewData["Title"] = "Tutoring Details";
}
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#calculateBtn').click(function () {
                var hours = parseFloat($('#hours').val());

                // Validate input
                if (isNaN(hours) || hours <= 0) {
                    alert('Please enter a valid number of hours.');
                    return;
                }

                var hourlyRate = parseFloat($('#hourlyRate').val().replace('$', ''));
                var total = hours * hourlyRate;

                $('#total').val('$' + total.toFixed(2));
            });
        });
    </script>
}

<!--Main Content Area-->
<main id="content">

    <!--Introduction-->
        <div class="row clearfix">

            <div class="col-3">
                <div class="section-heading">
                  <h2 class ="section-title">Tutoring Services Calculator</h2>
                    <div>
                        <label for="hours">Number of Hours:</label>
                        <input type="number" id="hours" min="1" step="1">
                    </div>
                    <div>
                        <label>Hourly Rate:</label>
                        <input type="text" id="hourlyRate" value="$30" readonly>
                    </div>
                    <div>
                        <button id="calculateBtn">Calculate Total</button>
                    </div>
                    <div>
                        <label>Total:</label>
                        <input type="text" id="total" readonly>
                    </div>
                    <div>
                        <a href="@Url.Action("Index", "Home")">Back to Home</a>
                    </div>
                </div>

            </div>
        </div>
    
</main>
<!--End Main Content Area-->
